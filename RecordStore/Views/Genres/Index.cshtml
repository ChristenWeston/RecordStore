@{
  Layout ="_Layout";
}

@using RecordStore.Models;
@model List<RecordStore.Models.Genre>;

<h1>Genres</h1>

@if (@Model.Count == 0)
{
  <h3>No genres have been added yet!</h3>
}

@foreach (Genre genre in Model)
{
  <li>@Html.ActionLink($"{genre.GenreName}", "Details", new { id = genre.GenreId })</li>
}
<p>@Html.ActionLink("Add new genre", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>