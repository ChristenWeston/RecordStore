@{
  Layout = "_Layout";
}

@using RecordStore.Models;
@model List<RecordStore.Models.Song>;

<h1>Songs</h1>

@if (@Model.Count == 0)
{
  <h3>No songs have been added yet!</h3>
} 

@foreach (Song song in Model)
{
  <li>@Html.ActionLink($"{song.SongName}", "Details", new { id = song.SongId })</li>
}

<p>@Html.ActionLink("Add new song", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>